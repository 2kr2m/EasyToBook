@model IEnumerable<VillaNumber>


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-gradient m-lg-0 py-3" style="background-color:#7ea2a0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">VillaNumbers List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col col-6 offset-6 text-end">
                <a asp-controller="VillaNumber" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-square"></i> Create New Villa Number
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Room Number</th>
                    <th>Villa Name</th>
                    <th>Description</th>
                    <th class="text-center text-primary">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Villa_Number</td>
                        <td>@obj.villa.Name</td>
                        <td>@obj.SpecialDetails</td>
                        <td class="text-center">
                            <div class="w-75 btn-group " role="group">
                                <a asp-controller="VillaNumber" asp-action="Update" asp-route-villaNumberId="@obj.Villa_Number" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="VillaNumber" asp-action="Delete" asp-route-villaNumberId="@obj.Villa_Number" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


